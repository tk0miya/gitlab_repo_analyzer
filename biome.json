{
	"$schema": "https://biomejs.dev/schemas/2.1.1/schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"includes": [
			"src/**/*.{js,jsx,ts,tsx}",
			"pages/**/*.{js,jsx,ts,tsx}",
			"__tests__/**/*.{js,jsx,ts,tsx}",
			"tests/**/*.{js,jsx,ts,tsx}",
			"*.{js,jsx,ts,tsx}",
			"middleware.ts",
			"next.config.js",
			"drizzle.config.ts",
			"vitest.config.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
