{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"outDir": "./dist",
		"declaration": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"noEmit": true,
		"incremental": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"],
			"@/api/*": ["src/api/*"],
			"@/types/*": ["src/types/*"],
			"@/database/*": ["src/database/*"],
			"@/config/*": ["src/config/*"],
			"next/server": ["./types/next-modules.d.ts"],
			"next/head": ["./types/next-modules.d.ts"]
		}
	},
	"include": ["src/**/*", "pages/**/*", "__tests__/**/*", "tests/**/*", "types/**/*", "vitest.config.ts"],
	"exclude": ["node_modules", "dist"]
}
