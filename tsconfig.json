{
	"compilerOptions": {
		"target": "ES2022",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"lib": ["ES2022"],

		"outDir": "./dist",
		"rootDir": "./src",
		"declaration": true,
		"sourceMap": true,

		"strict": true,
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,

		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
