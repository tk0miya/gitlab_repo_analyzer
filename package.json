{
	"name": "gitlab_repo_analyzer",
	"version": "1.0.0",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "npm run build:web && npm run build:cli",
		"build:cli": "npm run clean && esbuild src/cli/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/index.js",
		"build:web": "next build",
		"clean": "rm -rf dist/",
		"start": "next start",
		"start:cli": "node dist/index.js",
		"start:web": "next start",
		"typecheck": "tsc --noEmit",
		"dev": "next dev -H 0.0.0.0 -p 18080",
		"dev:cli": "tsx src/cli/index.ts",
		"dev:web": "next dev -H 0.0.0.0 -p 18080",
		"test": "NODE_ENV=test vitest run",
		"test:watch": "NODE_ENV=test vitest",
		"lint": "biome ci . --error-on-warnings",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"all": "npm run lint && npm run typecheck && npm run test && npm run build",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:migrate:test": "NODE_ENV=test drizzle-kit migrate",
		"db:check": "drizzle-kit check",
		"db:drop": "PGPASSWORD=$DB_PASSWORD psql -h $DB_HOST -p $DB_PORT -U $DB_USERNAME -d postgres -c \"DROP DATABASE IF EXISTS gitlab_analyzer_development;\"",
		"db:drop:test": "PGPASSWORD=$DB_PASSWORD psql -h $DB_HOST -p $DB_PORT -U $DB_USERNAME -d postgres -c \"DROP DATABASE IF EXISTS gitlab_analyzer_test;\"",
		"db:create": "PGPASSWORD=$DB_PASSWORD psql -h $DB_HOST -p $DB_PORT -U $DB_USERNAME -d postgres -c \"CREATE DATABASE gitlab_analyzer_development;\"",
		"db:create:test": "PGPASSWORD=$DB_PASSWORD psql -h $DB_HOST -p $DB_PORT -U $DB_USERNAME -d postgres -c \"CREATE DATABASE gitlab_analyzer_test;\"",
		"db:reset": "npm run db:drop && npm run db:create && npm run db:migrate",
		"db:reset:test": "npm run db:drop:test && npm run db:create:test && npm run db:migrate:test",
		"prepare": "husky"
	},
	"author": "",
	"license": "ISC",
	"description": "GitLabリポジトリを分析するNode.jsベースのツール",
	"devDependencies": {
		"@anthropic-ai/claude-code": "^1.0.61",
		"@biomejs/biome": "^2.0.0",
		"@testing-library/jest-dom": "^6.6.3",
		"@testing-library/react": "^16.3.0",
		"@testing-library/user-event": "^14.6.1",
		"@types/node": "^22.16.3",
		"@types/react": "^19.1.8",
		"@types/react-dom": "^19.1.7",
		"autoprefixer": "^10.4.21",
		"esbuild": "^0.25.8",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.2",
		"node-mocks-http": "^1.17.2",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.11",
		"tailwindcss-animate": "^1.0.7",
		"tsx": "^4.19.2",
		"typescript": "^5.8.3",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^3.2.4"
	},
	"dependencies": {
		"@hookform/resolvers": "^5.2.1",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/postcss": "^4.1.11",
		"@types/pg": "^8.15.4",
		"axios": "^1.10.0",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.1",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.4",
		"lucide-react": "^0.539.0",
		"next": "^15.4.4",
		"pg": "^8.16.3",
		"react": "^19.1.0",
		"react-dom": "^19.1.1",
		"react-hook-form": "^7.61.1",
		"tailwind-merge": "^3.3.1",
		"zod": "^4.0.16"
	},
	"lint-staged": {
		"*.{ts,tsx}": [
			"biome check --write",
			"bash -c 'npm run typecheck'",
			"bash -c 'NODE_ENV=test vitest related --run --passWithNoTests'"
		]
	}
}
