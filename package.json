{
	"name": "gitlab_repo_analyzer",
	"version": "1.0.0",
	"type": "module",
	"main": "dist/index.js",
	"scripts": {
		"build": "npm run clean && esbuild src/index.ts --bundle --platform=node --target=node22 --format=esm --outfile=dist/index.js",
		"clean": "rm -rf dist/",
		"start": "node dist/index.js",
		"typecheck": "tsc --noEmit",
		"dev": "node --loader tsx/esm src/index.ts",
		"test": "vitest run",
		"test:watch": "vitest",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write .",
		"all": "npm run lint && npm run typecheck && npm run test && npm run build",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "node --loader tsx/esm src/database/migrate.ts",
		"db:studio": "drizzle-kit studio",
		"db:push": "drizzle-kit push",
		"db:drop": "drizzle-kit drop"
	},
	"author": "",
	"license": "ISC",
	"description": "GitLabリポジトリを分析するNode.jsベースのツール",
	"devDependencies": {
		"@anthropic-ai/claude-code": "^1.0.43",
		"@biomejs/biome": "^2.0.0",
		"@types/node": "^22.16.3",
		"esbuild": "^0.24.0",
		"tsx": "^4.19.2",
		"typescript": "^5.8.3",
		"vitest": "^2.0.0"
	},
	"dependencies": {
		"@types/pg": "^8.15.4",
		"axios": "^1.10.0",
		"dotenv": "^16.4.5",
		"drizzle-kit": "^0.31.4",
		"drizzle-orm": "^0.44.3",
		"pg": "^8.16.3",
		"zod": "^3.22.4"
	}
}
