{
  "name": "gitlab_repo_analyzer",
  "version": "1.0.0",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --external:fs --external:path --external:os --external:util --external:crypto --external:buffer --external:stream --external:events --external:url --external:http --external:https --external:net --external:tls --external:zlib --external:querystring",
    "build:types": "tsc --emitDeclarationOnly",
    "build:full": "npm run build && npm run build:types",
    "typecheck": "tsc --noEmit",
    "dev": "esbuild src/index.ts --bundle --platform=node --outfile=dist/index.js --format=esm --external:fs --external:path --external:os --external:util --external:crypto --external:buffer --external:stream --external:events --external:url --external:http --external:https --external:net --external:tls --external:zlib --external:querystring --watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "",
  "license": "ISC",
  "description": "GitLabリポジトリを分析するNode.jsベースのツール",
  "devDependencies": {
    "@anthropic-ai/claude-code": "^1.0.43",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "typescript": "^5.5.0"
  }
}
